<config>
    <modules>
        <Technooze_T404>
            <version>0.0.1</version>
        </Technooze_T404>
    </modules>
    <global>
        <models>
            <t404>
                <class>Technooze_T404_Model</class>
            </t404>
        </models>
        <helpers>
            <t404>
                <class>Technooze_T404_Helper</class>
            </t404>
        </helpers>
        <events>
            <controller_front_init_routers>
                <observers>
                    <t404>
                        <type>singleton</type>
                        <class>Technooze_T404_Model_Observer</class>
                        <method>frontInitBefore</method>
                    </t404>
                </observers>
            </controller_front_init_routers>
            <controller_front_init_before>
                <observers>
                    <t404>
                        <type>singleton</type>
                        <class>Technooze_T404_Model_Observer</class>
                        <method>frontInitBefore</method>
                    </t404>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <frontend>
        <events>
            <controller_action_predispatch>
                <observers>
                    <t404>
                        <type>singleton</type>
                        <class>Technooze_T404_Model_Observer</class>
                        <method>noRoute</method>
                    </t404>
                </observers>
            </controller_action_predispatch>
        </events>
    </frontend>
</config>