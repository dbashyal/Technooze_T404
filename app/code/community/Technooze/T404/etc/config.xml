<config>
    <modules>
        <Technooze_T404>
            <version>0.0.1</version>
        </Technooze_T404>
    </modules>
    <global>
        <models>
            <t404>
                <class>Technooze_T404_Model</class>
            </t404>
        </models>
        <helpers>
            <t404>
                <class>Technooze_T404_Helper</class>
            </t404>
        </helpers>
    </global>
    <frontend>
        <events>
            <controller_action_predispatch>
                <observers>
                    <technooze_t404_model_observer>
                        <type>singleton</type>
                        <class>t404/observer</class>
                        <method>noRoute</method>
                    </technooze_t404_model_observer>
                </observers>
            </controller_action_predispatch>
        </events>
    </frontend>
</config>